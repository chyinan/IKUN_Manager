{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/preload.d.ts"],
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "ignoreDeprecations":"5.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxImportSource": "vue"
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
